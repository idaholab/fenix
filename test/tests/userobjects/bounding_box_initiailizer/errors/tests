[Tests]
  design = 'InitializerBase.md BoundingBox.md ElementSampler.md'
  issues = '#36'
  [errors]
    requirement = "The system return a useful error when the user"
    [unsupported_element]
      type = 'RunException'
      input = 'errors.i'
      allow_test_objects = true
      cli_args = 'Mesh/gmg/dim=1
                  Mesh/gmg/elem_type=EDGE3'
      expect_err = 'Particle Initialization has not been implemented for elements of type EDGE3'
      detail = 'requests an element type that initialization has not been verified for'
    []
    [setting_y_in_1d]
      type = 'RunException'
      input = 'errors.i'
      cli_args = 'Mesh/gmg/dim=1
                  UserObjects/initializer/y1=0
                  UserObjects/initializer/y2=1'
      allow_test_objects = true
      expect_err = "Params 'y1' and 'y2' should not be set in 1D simulations"
      detail = 'tries to setup a bounding box in 1D but provides the y parameters'
    []
    [setting_z_in_1d]
      type = 'RunException'
      input = 'errors.i'
      cli_args = 'Mesh/gmg/dim=1
                  UserObjects/initializer/z1=0
                  UserObjects/initializer/z2=1'
      allow_test_objects = true
      expect_err = "Params 'z1' and 'z2' should not be set unless you are performing a 3D simulation"
      detail = 'tries to setup a bounding box in 1D but provides the z parameters'
    []
    [setting_z_in_2d]
      type = 'RunException'
      input = 'errors.i'
      cli_args = 'Mesh/gmg/dim=1
                  UserObjects/initializer/z1=0
                  UserObjects/initializer/z2=1'
      allow_test_objects = true
      expect_err = "Params 'z1' and 'z2' should not be set unless you are performing a 3D simulation"
      detail = 'tries to setup a bounding box in 2D but provides the z parameters'
    []
    [top_right_less_than_bottom_left]
      type = 'RunException'
      input = 'errors.i'
      cli_args = 'Mesh/gmg/dim=1
                  UserObjects/initializer/x1=1
                  UserObjects/initializer/x2=0'
      allow_test_objects = true
      expect_err = "x2 must be greater than x1"
      detail = 'tries to setup a bounding box in 2D but provides the z parameters'
    []
  []
[]
